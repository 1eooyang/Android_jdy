<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="310dp"
    android:background="@drawable/rounded_corners_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/forward_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/forwrad_dialog_title_bg"
        android:gravity="center"
        android:text="绑定微信"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="130dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical" >
        
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:textSize="18dp" 
            android:text="@string/bindWechat_tip_text"/>

        <Button
            android:id="@+id/wxlogin_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/cashadvance_btn"
            android:text="绑定微信"
            android:textColor="@color/white"
            android:textSize="20dp" />
        
    </LinearLayout>

</LinearLayout>