<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="310dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/forward_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/forwrad_dialog_title_bg"
        android:gravity="center"
        android:text="@string/mainActivity_forward_dialog_title"
        android:textColor="@color/white"
        android:textSize="@dimen/cust_dialog_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/forward_btn_bg"
        android:gravity="center"
        android:minHeight="130dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:text="微信好友"
                android:textColor="@color/forward_text_color" />

            <ImageView
                android:id="@+id/imageView_wetchar1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/wechat" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:text="微信朋友圈"
                android:textColor="@color/forward_text_color" />

            <ImageView
                android:id="@+id/imageView_wetchar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/wx_timeline" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forward_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forward_dialog_bg"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/type_template"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/type_textview"
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:text="银行理财"
                android:textColor="#A9955A"
                android:textSize="13dp" />
        </LinearLayout>
            
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" 
            android:orientation="vertical" >
            <TextView
                android:id="@+id/product_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#607078" 
                android:layout_marginBottom="5dp"
                android:text="测试111" />
            
            <TextView
                android:id="@+id/product_desp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="测试222" />
            
            </LinearLayout>

            
        </LinearLayout>
        
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/forward_dialog_divier"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/forward_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7000.00元"
                    android:textSize="@dimen/forward_content_size"
                    android:textColor="@color/forwddialog_text_color" />

                <TextView
                    android:id="@+id/forward_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:gravity="center"
                    android:text="基金类型"
                    android:textSize="@dimen/forward_title_size" />
            </LinearLayout>
            
            <View android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/forward_dialog_divier"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/forward_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="股票型"
                    android:textSize="@dimen/forward_content_size"
                    android:textColor="@color/forwddialog_text_color" />

                <TextView
                    android:id="@+id/forward_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基金类型"
                    android:textSize="@dimen/forward_title_size" />
            </LinearLayout>
            
            <View android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/forward_dialog_divier"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/forward_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="股票型"
                    android:textColor="@color/forwddialog_text_color"
                    android:textSize="@dimen/forward_content_size" />

                <TextView
                    android:id="@+id/forward_text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基金类型"
                    android:textSize="@dimen/forward_title_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>