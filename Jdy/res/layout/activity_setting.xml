<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.app.jdy"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#d5dee5"
        android:orientation="vertical"
        android:paddingBottom="@dimen/view_split" >

        <RelativeLayout
            android:id="@+id/change_username_click"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/func_height"
            android:layout_marginTop="@dimen/view_split"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:text="用户名称"
                android:textColor="@color/main_black" />

            <TextView
                android:id="@+id/setting_show_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="啦啦啦"
                android:textColor="#8b9ea7"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/gogo" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_password_click"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/func_height"
            android:layout_marginTop="@dimen/view_split"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:text="修改密码"
                android:textColor="@color/main_black" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/gogo" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/about_us"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/func_height"
            android:layout_marginTop="@dimen/view_split"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:text="关于我们"
                android:textColor="@color/main_black" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/gogo" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/show_guide_click"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/func_height"
            android:layout_marginTop="@dimen/view_split"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:text="引导页"
                android:textColor="@color/main_black" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/gogo" />
        </RelativeLayout>

