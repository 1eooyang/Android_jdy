        <RelativeLayout
            android:id="@+id/check_new_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/func_height"
            android:layout_marginTop="@dimen/view_split"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:text="检查更新"
                android:textColor="@color/main_black" />
            
            <ImageView
                    android:id="@+id/check_new_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:background="@drawable/new_image"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/func_height"
            android:layout_marginTop="@dimen/view_split"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/setting_loginout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
