<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbarLayoutId"
    style="@style/title_bar_style" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center|center_horizontal" >

        <Button
            android:id="@+id/goldButton"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape3"
            android:gravity="center"
            android:text="金矿"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <Button
            android:id="@+id/myButton"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape4"
            android:gravity="center"
            android:text="我的"
            android:textColor="#46ABFF"
            android:textSize="15dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/search_img"
        android:layout_alignTop="@+id/search_img"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/star"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/search_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/search"
        android:visibility="invisible" />

</RelativeLayout>